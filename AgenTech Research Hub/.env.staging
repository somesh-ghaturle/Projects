# Staging Environment Configuration
# For testing production-like configurations

# Application Settings
APP_NAME=AgenTech Research Hub (Staging)
APP_VERSION=1.0.0
APP_ENVIRONMENT=staging
DEBUG=False
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_HOSTS=["staging.yourdomain.com", "staging-api.yourdomain.com"]

# Security Settings
SECRET_KEY=staging_secret_key_different_from_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ALLOWED_ORIGINS=["https://staging.yourdomain.com"]

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/agentech_research_hub_staging
VECTOR_DB_PATH=/app/data/vector_db
CHROMA_PERSIST_DIR=/app/data/chroma_db

# LLM API Keys (Use test/staging keys)
OPENAI_API_KEY=your_staging_openai_api_key
ANTHROPIC_API_KEY=your_staging_anthropic_api_key
GROQ_API_KEY=your_staging_groq_api_key

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Performance Settings (Lower limits for staging)
MAX_CONCURRENT_AGENTS=5
RESEARCH_TIMEOUT_SECONDS=120
MAX_SOURCES_PER_QUERY=15
WORKFLOW_RETRY_ATTEMPTS=2
RATE_LIMIT_PER_MINUTE=50

# Monitoring & Observability
ENABLE_METRICS=True
SENTRY_DSN=your_staging_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_staging_newrelic_license_key

# Feature Flags
ENABLE_WEB_SCRAPING=True
ENABLE_ACADEMIC_SEARCH=True
ENABLE_NEWS_SEARCH=True
ENABLE_CREW_AI=True
ENABLE_LANGGRAPH=True
ENABLE_RATE_LIMITING=True
ENABLE_API_KEY_AUTH=True

# Search APIs (Use test keys or limited quota keys)
GOOGLE_SEARCH_API_KEY=your_staging_google_search_api_key
GOOGLE_CSE_ID=your_staging_custom_search_engine_id
BING_SEARCH_API_KEY=your_staging_bing_search_api_key
SERPAPI_API_KEY=your_staging_serpapi_key

# Academic Research APIs
SEMANTIC_SCHOLAR_API_KEY=your_staging_semantic_scholar_key
ARXIV_API_URL=http://export.arxiv.org/api/query
PUBMED_API_KEY=your_staging_pubmed_api_key

# News APIs
NEWS_API_KEY=your_staging_news_api_key
ALPHA_VANTAGE_API_KEY=your_staging_alpha_vantage_key

# Backup and Data Retention
BACKUP_ENABLED=False
DATA_RETENTION_DAYS=30
